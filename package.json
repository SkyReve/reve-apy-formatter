{
  "name": "apy-formatter",
  "displayName": "apy-formatter",
  "description": "Applicable Python (APY) Formatter",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "APY Formatter",
      "properties": {
        "applicablePythonFormatter.formatter": {
          "type": "string",
          "enum": [
            "None",
            "black",
            "autopep8",
            "ruff"
          ],
          "default": "None",
          "description": "Select the formatter to use for your APY code."
        },
        "applicablePythonFormatter.executablePath": {
          "type": "string",
          "default": "black",
          "description": "Path to the formatter executable."
        },
        "applicablePythonFormatter.lineLength": {
          "type": "number",
          "default": 88,
          "description": "Maximum line length for the formatter."
        }
      }
    },
    "languages": [
      {
        "id": "applicablePython",
        "aliases": [
          "Applicable Python"
        ],
        "extensions": [
          ".apy"
        ],
        "configuration": "./language/configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "applicablePython",
        "scopeName": "source.applicablepython",
        "path": "./language/grammars.json"
      }
    ],
    "documentFormattingEditProviders": [
      {
        "language": "applicablePython",
        "scheme": "file",
        "command": "extension.formatDocument"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3"
  }
}
